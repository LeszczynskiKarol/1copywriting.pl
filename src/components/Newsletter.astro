---
interface Props {
  variant?: 'inline' | 'banner';
}

const { variant = 'inline' } = Astro.props;
---

<section class:list={['newsletter', `newsletter--${variant}`]}>
  <div class="newsletter__inner">
    <div class="newsletter__content">
      <span class="newsletter__badge">Newsletter</span>
      <h3 class="newsletter__title">Copywriting w&nbsp;pigułce</h3>
      <p class="newsletter__desc">
        Porady, techniki i&nbsp;inspiracje copywriterskie — prosto na&nbsp;Twój e-mail.
        Bez spamu, raz w&nbsp;tygodniu.
      </p>
    </div>
    <form class="newsletter__form" action="#" method="post">
      <div class="newsletter__input-wrap">
        <input
          type="email"
          name="email"
          placeholder="Twój adres e-mail"
          required
          aria-label="Adres e-mail"
          class="newsletter__input"
        />
        <button type="submit" class="newsletter__btn">
          Zapisuję się
        </button>
      </div>
      <p class="newsletter__privacy">
        Zapisując się, akceptujesz <a href="/polityka-prywatnosci/">politykę prywatności</a>.
      </p>
    </form>
  </div>
</section>

<style>
  .newsletter {
    border-radius: var(--radius-xl);
    overflow: hidden;
  }

  .newsletter--inline {
    background: var(--color-paper-warm);
    border: 1px solid var(--color-border);
    padding: var(--space-3xl);
  }

  .newsletter--banner {
    background: var(--color-ink);
    color: white;
    padding: var(--space-4xl) var(--space-3xl);
  }

  .newsletter__inner {
    max-width: 560px;
    margin-inline: auto;
    text-align: center;
  }

  .newsletter__badge {
    display: inline-block;
    font-size: var(--text-xs);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-accent);
    margin-bottom: var(--space-md);
  }

  .newsletter--banner .newsletter__badge {
    color: var(--color-accent-2);
  }

  .newsletter__title {
    font-family: var(--font-display);
    font-size: var(--text-3xl);
    margin-bottom: var(--space-md);
  }

  .newsletter__desc {
    font-size: var(--text-sm);
    line-height: var(--leading-normal);
    margin-bottom: var(--space-xl);
  }

  .newsletter--inline .newsletter__desc {
    color: var(--color-ink-muted);
  }

  .newsletter--banner .newsletter__desc {
    color: #9ca3af;
  }

  .newsletter__input-wrap {
    display: flex;
    gap: var(--space-sm);
    margin-bottom: var(--space-md);
  }

  .newsletter__input {
    flex: 1;
    padding: var(--space-md) var(--space-lg);
    font-family: var(--font-body);
    font-size: var(--text-sm);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    background: white;
    color: var(--color-ink);
    transition: border-color var(--transition-fast);
    outline: none;
  }

  .newsletter__input:focus {
    border-color: var(--color-accent);
    box-shadow: 0 0 0 3px var(--color-accent-light);
  }

  .newsletter--banner .newsletter__input {
    border-color: rgba(255, 255, 255, 0.15);
    background: rgba(255, 255, 255, 0.08);
    color: white;
  }

  .newsletter--banner .newsletter__input::placeholder {
    color: #9ca3af;
  }

  .newsletter--banner .newsletter__input:focus {
    border-color: var(--color-accent);
    background: rgba(255, 255, 255, 0.12);
  }

  .newsletter__btn {
    padding: var(--space-md) var(--space-xl);
    font-family: var(--font-body);
    font-size: var(--text-sm);
    font-weight: 600;
    color: white;
    background: var(--color-accent);
    border: none;
    border-radius: var(--radius-md);
    cursor: pointer;
    white-space: nowrap;
    transition: all var(--transition-fast);
  }

  .newsletter__btn:hover {
    background: var(--color-accent-hover);
    transform: translateY(-1px);
  }

  .newsletter__privacy {
    font-size: var(--text-xs);
    margin-bottom: 0;
  }

  .newsletter--inline .newsletter__privacy {
    color: var(--color-ink-subtle);
  }

  .newsletter--banner .newsletter__privacy {
    color: #6b7280;
  }

  .newsletter__privacy a {
    color: inherit;
    text-decoration: underline;
  }

  @media (max-width: 480px) {
    .newsletter__input-wrap {
      flex-direction: column;
    }
  }
</style>
