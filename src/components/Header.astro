---
import { NAV_ITEMS } from '@/utils/config';

const currentPath = Astro.url.pathname;
---

<header class="header" id="header">
  <div class="header__inner container">
    <a href="/" class="header__logo" aria-label="Strona główna 1copywriting.pl">
      <span class="header__logo-icon">✦</span>
      <span class="header__logo-text">
        <span class="header__logo-num">1</span>copywriting.pl
      </span>
    </a>

    <nav class="header__nav" id="mainNav" aria-label="Nawigacja główna">
      <ul class="header__nav-list">
        {NAV_ITEMS.map((item) => (
          <li>
            <a
              href={item.href}
              class:list={[
                'header__nav-link',
                { 'is-active': currentPath.startsWith(item.href) },
              ]}
            >
              {item.label}
            </a>
          </li>
        ))}
      </ul>
    </nav>

    <button
      class="header__burger"
      id="menuToggle"
      aria-label="Otwórz menu"
      aria-expanded="false"
      aria-controls="mobileMenu"
    >
      <span class="header__burger-line"></span>
      <span class="header__burger-line"></span>
      <span class="header__burger-line"></span>
    </button>
  </div>
</header>

<!-- Mobile menu - OUTSIDE header to avoid clipping issues -->
<div class="mobile-menu" id="mobileMenu" aria-hidden="true">
  <nav aria-label="Menu mobilne">
    <ul class="mobile-menu__list">
      {NAV_ITEMS.map((item) => (
        <li>
          <a href={item.href} class="mobile-menu__link">
            {item.label}
          </a>
        </li>
      ))}
    </ul>
  </nav>
</div>

<style is:global>
  /* ==========================================
     MOBILE MENU - full screen overlay
     Must be global to work outside header
     ========================================== */
  .mobile-menu {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    height: 100dvh;
    background: #FAFAF8;
    padding-top: 96px; /* header height + spacing */
    padding-left: 24px;
    padding-right: 24px;
    padding-bottom: 24px;
    z-index: 99;
    overflow-y: auto;
    -webkit-overflow-scrolling: touch;
    
    /* Hidden by default */
    display: none;
  }

  .mobile-menu.is-open {
    display: block;
  }

  .mobile-menu__list {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: 8px;
    padding: 0;
    margin: 0;
  }

  .mobile-menu__link {
    display: block;
    padding: 16px 20px;
    font-family: 'DM Serif Display', Georgia, serif;
    font-size: 1.25rem;
    color: #1A1A1A;
    border-radius: 8px;
    transition: background 0.15s ease;
    text-decoration: none;
  }

  .mobile-menu__link:hover,
  .mobile-menu__link:focus {
    background: #F5F3EE;
    color: #C03E2E;
  }

  /* Hide mobile menu on desktop */
  @media (min-width: 1025px) {
    .mobile-menu {
      display: none !important;
    }
  }
</style>

<style>
  .header {
    position: sticky;
    top: 0;
    z-index: 100;
    background: rgba(250, 250, 248, 0.92);
    backdrop-filter: blur(16px);
    -webkit-backdrop-filter: blur(16px);
    border-bottom: 1px solid var(--color-border-light);
    height: var(--header-height, 72px);
    transition: box-shadow var(--transition-base);
  }

  .header.is-scrolled {
    box-shadow: var(--shadow-sm);
  }

  .header__inner {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 100%;
    gap: var(--space-xl);
  }

  /* Logo */
  .header__logo {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    color: var(--color-ink);
    font-family: var(--font-display);
    font-size: 1.35rem;
    white-space: nowrap;
    transition: opacity var(--transition-fast);
  }

  .header__logo:hover {
    color: var(--color-ink);
    opacity: 0.8;
  }

  .header__logo-icon {
    color: var(--color-accent);
    font-size: 1.1rem;
  }

  .header__logo-num {
    color: var(--color-accent);
  }

  /* Nav */
  .header__nav-list {
    display: flex;
    list-style: none;
    gap: var(--space-xs);
  }

  .header__nav-link {
    display: block;
    padding: var(--space-sm) var(--space-md);
    font-size: var(--text-sm);
    font-weight: 500;
    color: var(--color-ink-muted);
    border-radius: var(--radius-md);
    transition: all var(--transition-fast);
    letter-spacing: 0.01em;
  }

  .header__nav-link:hover {
    color: var(--color-ink);
    background: var(--color-paper-alt);
  }

  .header__nav-link.is-active {
    color: var(--color-accent);
    background: var(--color-accent-light);
  }

  /* Burger */
  .header__burger {
    display: none;
    flex-direction: column;
    justify-content: center;
    gap: 5px;
    width: 44px;
    height: 44px;
    background: none;
    border: none;
    cursor: pointer;
    padding: 10px;
    margin-right: -10px;
  }

  .header__burger-line {
    display: block;
    width: 100%;
    height: 2px;
    background: var(--color-ink);
    border-radius: 2px;
    transition: all 0.3s ease;
    transform-origin: center;
  }

  .header__burger.is-open .header__burger-line:nth-child(1) {
    transform: rotate(45deg) translate(5px, 5px);
  }

  .header__burger.is-open .header__burger-line:nth-child(2) {
    opacity: 0;
  }

  .header__burger.is-open .header__burger-line:nth-child(3) {
    transform: rotate(-45deg) translate(5px, -5px);
  }

  /* Desktop: show nav, hide burger */
  @media (min-width: 1025px) {
    .header__nav {
      display: block;
    }

    .header__burger {
      display: none !important;
    }
  }

  /* Mobile/Tablet: hide nav, show burger */
  @media (max-width: 1024px) {
    .header__nav {
      display: none;
    }

    .header__burger {
      display: flex;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const header = document.getElementById('header');
    const toggle = document.getElementById('menuToggle');
    const menu = document.getElementById('mobileMenu');

    if (!toggle || !menu) return;

    // Sticky header shadow
    window.addEventListener('scroll', () => {
      header?.classList.toggle('is-scrolled', window.scrollY > 10);
    }, { passive: true });

    // Close menu
    function closeMenu() {
      toggle.classList.remove('is-open');
      menu.classList.remove('is-open');
      toggle.setAttribute('aria-expanded', 'false');
      menu.setAttribute('aria-hidden', 'true');
      document.body.style.overflow = '';
    }

    // Open menu
    function openMenu() {
      toggle.classList.add('is-open');
      menu.classList.add('is-open');
      toggle.setAttribute('aria-expanded', 'true');
      menu.setAttribute('aria-hidden', 'false');
      document.body.style.overflow = 'hidden';
    }

    // Toggle
    toggle.addEventListener('click', () => {
      if (toggle.classList.contains('is-open')) {
        closeMenu();
      } else {
        openMenu();
      }
    });

    // Close on link click
    menu.querySelectorAll('a').forEach((link) => {
      link.addEventListener('click', closeMenu);
    });

    // Close on Escape
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && menu.classList.contains('is-open')) {
        closeMenu();
        toggle.focus();
      }
    });

    // Close on resize to desktop
    window.addEventListener('resize', () => {
      if (window.innerWidth > 1024 && menu.classList.contains('is-open')) {
        closeMenu();
      }
    }, { passive: true });
  });
</script>