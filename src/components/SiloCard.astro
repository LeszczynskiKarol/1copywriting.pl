---
interface Props {
  title: string;
  description: string;
  href: string;
  icon: string;
  color: string;
  count?: number;
}

const { title, description, href, icon, color, count } = Astro.props;
---

<a href={href} class="silo-card" style={`--silo-color: ${color}`}>
  <div class="silo-card__icon-wrap">
    <span class="silo-card__icon">{icon}</span>
  </div>
  <div class="silo-card__body">
    <h3 class="silo-card__title">{title}</h3>
    <p class="silo-card__desc">{description}</p>
    {count !== undefined && (
      <span class="silo-card__count">{count} artykułów</span>
    )}
  </div>
  <span class="silo-card__arrow" aria-hidden="true">→</span>
</a>

<style>
  .silo-card {
    display: flex;
    align-items: flex-start;
    gap: var(--space-lg);
    padding: var(--space-xl);
    background: white;
    border: 1px solid var(--color-border-light);
    border-radius: var(--radius-lg);
    color: inherit;
    text-decoration: none;
    position: relative;
    transition: all var(--transition-base);
    overflow: hidden;
  }

  .silo-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 3px;
    height: 100%;
    background: var(--silo-color);
    opacity: 0;
    transition: opacity var(--transition-base);
  }

  .silo-card:hover {
    border-color: var(--color-border);
    box-shadow: var(--shadow-md);
    transform: translateY(-2px);
  }

  .silo-card:hover::before {
    opacity: 1;
  }

  .silo-card__icon-wrap {
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: color-mix(in srgb, var(--silo-color) 10%, transparent);
    border-radius: var(--radius-md);
    flex-shrink: 0;
    font-size: 1.4rem;
  }

  .silo-card__body {
    flex: 1;
    min-width: 0;
  }

  .silo-card__title {
    font-family: var(--font-display);
    font-size: var(--text-lg);
    line-height: var(--leading-snug);
    margin-bottom: var(--space-xs);
    transition: color var(--transition-fast);
  }

  .silo-card:hover .silo-card__title {
    color: var(--silo-color);
  }

  .silo-card__desc {
    font-size: var(--text-sm);
    color: var(--color-ink-muted);
    line-height: var(--leading-normal);
    margin-bottom: var(--space-sm);
  }

  .silo-card__count {
    font-size: var(--text-xs);
    font-weight: 600;
    color: var(--silo-color);
  }

  .silo-card__arrow {
    position: absolute;
    top: var(--space-xl);
    right: var(--space-xl);
    color: var(--color-ink-subtle);
    font-size: var(--text-lg);
    transition: all var(--transition-fast);
    opacity: 0;
    transform: translateX(-4px);
  }

  .silo-card:hover .silo-card__arrow {
    opacity: 1;
    transform: translateX(0);
    color: var(--silo-color);
  }
</style>
